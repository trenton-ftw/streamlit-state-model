{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run demo streamlit app",
            "type": "shell",
            "command": "streamlit run demo_app/streamlit_app.py",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
            }
        },
        {
            "label": "export conda env",
            "type": "shell",
            "command": "powershell -Command \"conda env export --from-history --no-builds | Select-String -Pattern '^(?!prefix).*' > dev_environment.yml\"",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "build with flit",
            "type": "shell",
            "command": "flit build",
            "problemMatcher": [],
            "presentation": {
            "reveal": "always",
            "panel": "new"
            }
        }
    ]
}